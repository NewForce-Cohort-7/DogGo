@model DogGo.Models.ViewModels.WalkerViewModel

@{ ViewData["Title"] ="Walker Profile"; }


<div>
  <h1 class="mb-4">Walker Profile</h1>

  <section class="container">
    <img
      style="width:100px;float:left;margin-right:20px"
      src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg"
    />
    <div>
      <label class="font-weight-bold">Name:</label>
      <span>@Model.Walker.Name</span>
    </div>
    <div>
      <label class="font-weight-bold">Neighborhood:</label>
      <span>@Model.Walker.Neighborhood.Name</span>
    </div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

  <div class="row">
    <section class="col-6 container mt-4">
      <h1 class="text-left">Recent Walks</h1>

        <div>
                <a asp-area="" asp-controller="Walks" asp-action="Create">Add Walk(s)</a>  |  
                <a asp-area="" asp-controller="Walks" asp-action="Delete">Delete Walk(s)</a>
        </div>

      <div class="row">

                <table class="table">
                    <thead>
                        <tr style="color: lightgrey">
                            <th>
                                Date
                            </th>
                            <th>
                                client
                            </th>
                            <th>
                                Duration
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var walk in Model.Walks)
                        {
                            <tr>
                                <td>
                                    @walk.Date.ToString("MM/dd/yyyy")
                                </td>
                                <td>
                                    @walk.Owner.Name
                                </td>
                                <td>
                                    @TimeSpan.FromSeconds(walk.Duration).ToString(@"h\h\rmm\m\i\n")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


      </div>
    </section>


    <section class="col-lg-4 col-md-8 container mt-4">
      <h1>Total Walk Time</h1>

      <ul class="list-group mt-4">
        @TimeSpan.FromSeconds(Model.Walks.Sum(walk => walk.Duration)).ToString(@"h\h\rmm\m\i\n")
      </ul>
    </section>
  </div>
</div>
<div>

    
    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id }) |

    <a asp-action="Index">Back to List</a>
</div>